{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "esModuleInterop": true,
        "sourceMap": true,
        "outDir": "build",
        "allowJs": true,
        "resolveJsonModule": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}